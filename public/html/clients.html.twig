{% extends 'main_layout.html.twig' %}
{% block content %}
    <div id="page-wrapper" style="min-height: 400px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Clientes</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <script src="{{ WEB_PATH }}public/js/clients.js"></script>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Listado de clientes
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Ci</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Telefono</th>
                                <th>Celular</th>
                                <th>Fecha Nacimiento</th>
                                <th>Editar</th>
                            </tr>
                            </thead>
                            <tbody id="table_clients">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/html" id="row_table_clientes">
        [[#clients]]
        <tr class="odd gradeX">
            <td>[[ci]]</td>
            <td>[[name]]</td>
            <td>[[lastname]]</td>
            <td>[[telephone]]</td>
            <td>[[cellphone]]</td>
            <td>[[birthdate]]</td>
            <td><i class="fa fa-edit fa-fw" data-edit-client="[[id]]" style="cursor: pointer"></i></td>
        </tr>
        [[/clients]]
    </script>
    <div id="page-wrapper">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Agregar nuevo cliente
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <form role="form" id="form_client">
                                <div class="col-lg-6">
                                    <input name="id" type="hidden">
                                    <div class="form-group">
                                        <label>Ci</label>
                                        <input name="ci" required class="form-control" placeholder="Ingrese la cedula">
                                    </div>
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        <input name="name" required class="form-control" placeholder="Ingrese nombre">
                                    </div>
                                    <div class="form-group">
                                        <label>Apellido</label>
                                        <input name="lastname" required class="form-control"
                                               placeholder="Ingrese apellido">
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Teléfono</label>
                                        <input name="telephone" type="tel" class="form-control" placeholder="Ingrese teléfono">
                                    </div>
                                    <div class="form-group">
                                        <label>Celular</label>
                                        <input name="cellphone" type="tel" class="form-control" placeholder="Ingrese celular">
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha nacimiento</label>
                                        <input name="birthdate" required class="form-control" data-type="datepicker"
                                               placeholder="Fecha de nacimiento">
                                    </div>

                                    <button type="submit" id="new_client" class="btn btn-success">Agregar cliente
                                    </button>
                                    <button type="submit" id="edit_client" class="btn btn-warning"
                                            style="display: none">Modificar cliente
                                    </button>
                                    <button type="reset" id="clean_form_client" class="btn btn-danger">Limpiar formulario</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}